section.destination
	h2.destination__title Top Hotel Destinations
	.destination__container

		.destination__row
			.destination__block.destination__block--big
				+tile('New York', 100)
				+tile('Prague', 100)
				+tile('Dublin', 100)
				+tile('Antalya', 100)
			.destination__block.destination__block--small
				+tile('Phuket Island', 100)
				- var str1 = "Tips and photos all day long."
				- var str2 = 'Follow us on google+'
				+follow ('facebook','blue', str1, str2)
			.destination__block.destination__block--big
				+tile-large('Istanbul', 100)

			.destination__block.destination__block--small
				- var str1 = "Community and groups helpsing you all day."
				- var str2 = 'Like us on Facebook'
				+follow ('google','red', str1, str2)
				+tile('Tenerife', 100)
			.destination__block.destination__block--big
				+tile-large('Barcelona', 100)
			.destination__block.destination__block--big
				+tile-middle('Pattaya', 100)
				- var str1 = "Twitting the best prices throughout the day."
				- var str2 = 'Follow us on Twitter'
				+follow ('twitter','lightblue', str1, str2)
				+tile('Sharm al Sheikh', 100)

			.destination__block.destination__block--big
				+tile('Dubai City', 100)
				+tile('Hurghada', 100)
				- var str1 = "Checkout the best photos of destinations."
				- var str2 = 'Follow us on Instagram'
				+follow ('instagram','darkblue', str1, str2)
				+tile('Seattle', 100)
			.destination__block.destination__block--small
				+tile('Amsterdam', 100)
				+tile-noimg ('orange', 'Batumi', 100)
			.destination__block.destination__block--big
				+tile-large('London', 100)

			.destination__block.destination__block--big
				+tile-large('Paris', 100)
			.destination__block.destination__block--big
				+tile-middle('Singapore', 100)
				- var str1 = "Deals and prices directly to your inbox."
				- var str2 = 'Subscribe to our newsletter'
				+follow ('email','yellow', str1, str2)
				+tile('Nha Trang', 100)
			.destination__block.destination__block--small
				+tile('Samui Island', 100)
				+tile('Budapest', 100)

			.destination__block.destination__block--small
				+tile-noimg (color, name, price)
				+tile('Budva', 100)
				+tile('Odessa', 100)
			.destination__block.destination__block--big
				+tile-middle('Berlin', 100)
				+tile('Venice', 100)
				+tile('Marmaris', 100)
			.destination__block.destination__block--big
				+tile('Milan', 100)
				+tile('Vienna', 100)
				- var str1 = "Thousands of pins to see and enjoy."
				- var str2 = 'Follow us on Pinterest'
				+follow ('pinterest','bright-red', str1, str2)
				+tile('Tivat', 100)
			
			.destination__block.destination__block--big
				+tile-large('Bangkok', 100)
			.destination__block.destination__block--small
				+tile('Rio', 100)
				+tile('Glendalough', 100)
			.destination__block.destination__block--big
				+tile-large('Rome', 100)

			.destination__block.destination__block--big
				+tile('Alanya', 100)
				- var str1 = "Didn’t find your choice? Try our custom search."
				- var str2 = 'Hotel Search'
				+follow ('search','cyan', str1, str2)
				+tile-middle('Bay Of Island', 100)
			.destination__block.destination__block--small
				+tile('Cologne', 100)
				- var str1 = "Didn’t find your choice? Try our custom search."
				- var str2 = 'Hotel Search'
				+follow ('people','pure-blue', str1, str2)
			.destination__block.destination__block--big
				+tile('Belek', 100)
				+tile-noimg('purple','Kemer', 100)
				+tile('Tbilisi', 100)
				- var str2 = 'See More Destinations'
				+down('down','green', str2)