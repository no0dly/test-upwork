footer.page-footer
		.page-footer__wrap
			.socials
				ul.socials__list
					each item in ['fb','tw','go','p']
						li.socials__item
							a(href="#" class="sprite sprite-" + item)= item
			nav.navigation
				ul.navigation__list
					each item in ['About Us', 'Privacy Policy', 'Terms & Conditions', 'Contact Us', 'Cookie Policy']
						li.navigation__item
							a(href="#" class="navigation__link")= item
		.copy
			small.copy__text Â© 2015 HotelPriceRadar all rights reserved



